{
  "type": "module",
  "scripts": {
    "build": "cd packages/alpinejs && pnpm run build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write .",
    "lint:staged": "lint-staged",
    "precommit": "run-s lint:staged build size",
    "prepare": "husky install",
    "size": "node scripts/getSize.js",
    "size:test": "NODE_ENV=test node scripts/getSize.js"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vitest/coverage-c8": "^0.24.3",
    "esbuild": "^0.15.11",
    "eslint": "^8.25.0",
    "gzip-size": "^7.0.0",
    "happy-dom": "^7.5.14",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-bytes": "^6.0.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vitest": "^0.24.3",
    "vitest-dom": "^0.0.4"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,html,css,scss,less,graphql,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
